---
import LevelSkill from './LevelSkill'
import skills from '../data/skills.json'
import { Icon } from 'astro-icon/components'
---

<div class='flex-col mt-4'>
  <h2 class='text-4xl text-zinc-600 dark:text-zinc-200 font-light mb-10'>
    Tecnolog√≠as
  </h2>
  <div
    class='flex flex-wrap justify-center lg:justify-between gap-4 mt-4 animate-fade-up animate-once animate-fill-forwards'
  >
    {
      skills.data.map((skill, index) => (
        <div class='w-full group flex flex-col basis-1/3 lg:basis-1/5 items-center border border-zinc-300 dark:border-zinc-600 bg-zinc-100 p-4 rounded-md font-semibold dark:bg-zinc-900 transition duration-500 hover:transition hover:duration-500 hover:scale-110'>
          {skill.icon && (
            <Icon
              name={skill.icon}
              class='h-8 w-8 text-zinc-700 dark:text-zinc-300 mb-2 transition duration-500 group-hover:transition group-hover:duration-500 group-hover:scale-125 drop-shadow-lg'
            />
          )}

          <p class='text-zinc-700 dark:text-zinc-300 text-center group-hover:scale-100'>
            {skill.name}
          </p>
          {/*
          <ul>
            <li class='text-zinc-300'>
              <LevelSkill level={skill.level} />
            </li>
          </ul>
          */}
        </div>
      ))
    }
  </div>
</div>
