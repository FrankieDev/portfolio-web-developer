---
interface Props {
  title: string
  subtitle: string
  date: string
  description: string
  technologies: string[]
}

const { title, subtitle, date, description, technologies } = Astro.props
---

<li class='mb-10 ms-4'>
  <div
    class='absolute w-3 h-3 bg-stone-400 rounded-full mt-1.5 -start-1.5 border border-white dark:border-stone-600 dark:bg-stone-700'
  >
  </div>
  <time
    class='mb-1 text-sm font-normal leading-none text-stone-600 dark:text-stone-400'
    >{date}</time
  >
  <h3 class='text-md font-semibold text-stone-600 dark:text-stone-300'>
    {title}
  </h3>
  <p class='mb-4 text-base font-normal text-stone-600 dark:text-stone-400'>
    {description}
  </p>
  <p class='mb-4 text-base font-normal text-stone-500 dark:text-stone-400'>
    {
      technologies &&
        technologies.map((tech) => (
          <span class='inline-block px-3 py-1 mr-2 text-xs font-medium text-stone-500 bg-stone-100 border border-stone-200 dark:text-stone-100 dark:bg-stone-600 dark:border-none   rounded-full'>
            {tech}
          </span>
        ))
    }
  </p>
</li>
